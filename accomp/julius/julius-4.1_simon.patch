 adin_alsa_end()
 {
-  return(TRUE);
+  int ret;
+  if (!handle) return TRUE;
+  
+  boolean worked=TRUE;
+  
+  if (snd_pcm_state(handle) == SND_PCM_STATE_RUNNING)
+  {
+    if ((ret = snd_pcm_drop(handle)) != 0) {
+      worked = FALSE;
+      fprintf(stderr, "Could not drop frames: %d", ret);
+    }
+  }
+  if ((ret = snd_pcm_close(handle)) != 0) {
