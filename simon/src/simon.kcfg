  <group name="Sound">
    <entry name="InputDevice" type="Int">
      <label>The sounddevice used for recording.</label>
    </entry>
    <entry name="OutputDevice" type="Int">
      <label>The sounddevice used for playback.</label>
    </entry>
    <entry name="Channels" type="Int">
      <label>How many channels should the samples be recorded with.</label>
    </entry>
    <entry name="SampleRate" type="Int">
      <label>The samplerate used for recording.</label>
    </entry>
  </group>


</kcfgfile>
</kcfg>
